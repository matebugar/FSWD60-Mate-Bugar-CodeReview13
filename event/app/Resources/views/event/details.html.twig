{% extends 'base.html.twig' %}
{% block body %}
       <div class="fluid-container">
        <div class="row">
          
            <div class=" col-lg-12 col-md-6 col-sm-12 m-4">
                <div class="card-content  d-flex flex-column text-center">
                    <div class="card-img mb-3">
                        <img src="{{event.img}}" >
                    </div>
                    <div>
                        <h3 class="title">{{event.name}}</h3><hr>
                        <p>Type: {{event.type}}</p>
                        <p>{{event.date|date('F j, Y, g:i a')}}</p>
                        
                    </div><hr>
                    <div>
                      <p class="details-desc">{{event.description}}</p><hr>
                      <p>{{event.address}}</p>
                      <p>Capacity: {{event.capacity}}</p>
                      <p>E-mail: {{event.email}}</p>
                      <p>Phone: {{event.phone}}</p>
                      <p>Website: {{event.webpage}}</p>
                      <a class="btn btn-dark" href="/">Back to Home</a>
                    </div>
                </div>
            </div>
            
        </div>
    </div>
{% endblock %}