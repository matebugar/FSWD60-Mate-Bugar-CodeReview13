{% extends 'base.html.twig' %}
{% block stylesheets %}
{% endblock %}
{% block body %}

  <div class="jumbotron text-center">
    <div class="container">
      <h1 class="display-3">Big Events</h1>
      <p>All, that is important in the right hands</p>
    </div>
  </div> 

    <div class="fluid-container">
        <div class="row">
          {% for event in events %}
            <div class=" col-lg-3 col-md-6 col-sm-12 mb-4">
                <div class="card-content  d-flex flex-column text-center">
                    <div class="card-img mb-3">
                        <img src="{{event.img}}" >
                    </div>
                    <div>
                        <h3 class="title">{{event.name}}</h3>
                        <p>{{event.date|date('F j, Y, g:i a')}}</p>
                            <a href="/event/details/{{event.id}}" class="btn btn-light col-md-3 col-sm-6">View</a>   
                            <a href="/event/edit/{{event.id}}" class="btn btn-light col-md-3 col-sm-6">Edit</a>
      <a href="/event/delete/{{event.id}}" class="btn btn-light col-md-3 col-sm-6 col-xs-3">Delete</a>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>


{% endblock %}